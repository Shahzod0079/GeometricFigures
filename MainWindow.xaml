<Window x:Class="GeometricFigures.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Geometric Figures" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Canvas x:Name="MainCanvas" Grid.Row="0" Background="White"/>

        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="10">
            <Button 
                x:Name="DrawButton" 
                Content="Draw Figures" 
                Click="DrawButton_Click" 
                Margin="5" 
                Padding="10,5"/>
            <Button 
                x:Name="ClearButton" 
                Content="Clear Canvas" 
                Click="ClearButton_Click" 
                Margin="5" 
                Padding="10,5"/>
        </StackPanel>
    </Grid>
</Window>